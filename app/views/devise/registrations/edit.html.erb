<div class="row">
  <div class="col-md-3">
 
     <ul class="sidebar-list">
 
          <li class="sidebar-item">
 
               <%= link_to 'Modifier mon profil', edit_user_registration_path, class: 'sidebar-link active' %>
 
          </li>
 
     </ul>
 
 <br>
 
 <%= link_to 'Voir mon profil', user_path(current_user.id), class: 'btn btn-default wide' %>
 
 </div>
 
    <div class="col-md-7 text-center">  
      <div class="panel panel-default">
        <div class="panel-heading">My Profile</div>
          <div class="panel-body">
            <ul> You have to enter your password to change your profile.</ul>
            <div class="container">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>
 
              <div class="form-group">
                <br />
 
                       <%= f.text_field :fullname, autofocus: true, class: "form-control", placeholder: "Enter Full Name" %>
 
              </div>
 
              <div class="form-group">
 
                  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter Email Address" %>
 
              </div>
                <br />
                
              <div class="row">
 
                <div class="col-md-5">
 
                  <div class="form-group">
 
                   <span class="btn btn-default btn-file">
 
                        Upload my profile pictures
 
                        <%= f.file_field :avatar %>
 
                   </span>
 
                  </div>
 
                </div>  
 
              </div>
              
              <div class="form-group">
                 <%= f.text_field :phone_number, class: "form-control", placeholder: "Phone number" %>
              </div>
              
              <div class="form-group">
                <%= f.text_area :description, rows:5, col:25, class: "form-control", placeholder: "My description" %>
              </div>
 
              <div class="form-group">
 
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter New Password (if you want to change)"  %>

              </div>
 
              <div class="form-group">
 
                 <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm Password" %>
                  <br />
              </div>
 
              <div class="form-group">
 
                <br />
 
                <%= f.password_field :current_password, autocomplete: "off", class: "form-control", placeholder: "Enter Current Password" %>
 
              </div>
 
              <div class="actions">
    
                <%= f.submit "Update", class: "btn btn-primary" %>
 
              </div>
         <% end %>
            </div>
          </div>
      </div>
          
    </div>
</div>
