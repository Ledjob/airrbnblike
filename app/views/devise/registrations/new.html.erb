<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">

    <h2>Sign up</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%=render "shared/devise_errors" %>
    
     <div class="form-group">
          <%= f.text_field :fullname, autofocus: true, :class => "form-control", :placeholder => "Enter Full Name" %>
        </div>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Enter Email Address" %>
        </div>

        <div class="form-group">
          <br />
          <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Enter A Password" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "Enter Password Again" %>
        </div>
    
      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>
    
    <% unless current_user.confirmed_at? %>
     <br><br>
     <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {
       method: :post }) do |f| %>
       <%= f.hidden_field :email, value: current_user.email %>
       <div class="actions">
          <%= f.submit "Resend the confirmation email", class: "btn btn-primary" %>
       </div>
     })
     <% end %>
    <% end %> 
    
      </div>
    </div>
