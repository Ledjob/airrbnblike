
<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">

    
    <h2>Sign In</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Enter Email Address" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Enter Your Password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %> Remember Me?
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", :class => "btn btn-primary" %>
          
          <br>
          <br>
          
          <%= link_to "Forgot Password", new_user_password_path, :class => "btn btn-primary" %> 
        </div>
      <% end %>

      

  </div>
</div>
